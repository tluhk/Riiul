{
  "name": "riiul-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "start": "node ./dist/app.js",
    "start:prod": "npm run migrate:up && npm run start",
    "test": "jest --forceExit --detectOpenHandles --runInBand",
    "migrate:create": "node-pg-migrate -m ./src/migrations -j ts create",
    "migrate:up": "node-pg-migrate -m ./dist/migrations  --ignore-pattern .*\\.js\\.map up",
    "lint": "eslint test src"
  },
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "dependencies": {
    "@types/luxon": "^2.0.5",
    "bcrypt": "^5.0.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^2.0.2",
    "morgan": "~1.9.1",
    "node-pg-migrate": "^6.0.0",
    "pg": "^8.7.1",
    "rollbar": "^2.24.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/http-errors": "^1.8.1",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^7.32.0",
    "eslint-plugin-promise": "^5.1.0",
    "faker": "^5.5.3",
    "jest": "^27.2.5",
    "superagent": "^6.1.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "typescript": "^4.4.2"
  },
  "jest": {
    "clearMocks": true,
    "globalSetup": "./src/scripts/jestGlobalSetup.ts",
    "globalTeardown": "./src/scripts/jestGlobalTeardown.ts",
    "testRegex": "/test/.*/.*.test.ts?$",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/app.ts",
      "!src/**/index.ts",
      "!src/**/*.d.ts",
      "!src/migrations/*.ts",
      "!src/**/types/*.ts",
      "!src/**/enums/*.ts"
    ]
  }
}
