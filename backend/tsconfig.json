{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "./",
		"paths": {
			"@riiul/repository": ["src/database/"],
			"@riiul/subjects": ["src/subjects/"],
			"@riiul/*": ["src/shared/*"]
		}
	},
	"include": [
		"src"
	]
}
